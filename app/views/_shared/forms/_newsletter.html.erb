<section class="col-md-12 newsletter-subscribe">
  <div class="col-sm-11 center-block">
    <h2 class="text-center newsletter-subscribe__title">Newsletter Subscription</h2>

    <div class="sections ewsletter-subscribe-form">
      <div class="thanks hidden">
        <p class="newsletter-subscribe-form__thanks">Thanks for subscribing!</p>
      </div>
      <form id="ajax-newsletter-subscribe" action="/newsletter">
        <div class="col-xs-12 col-sm-7 center-block no-gutters">
          <div class="col-xs-12">
            <input id="newsletter-first" name="first_name" type="text" class="newsletter-subscribe-form__input" placeholder="first name" />
          </div>

          <div class="col-xs-12">
            <input id="newsletter-last" name="last_name" type="text" class="newsletter-subscribe-form__input" placeholder="last name" />
          </div>

          <div class="col-xs-12">
            <input id="newsletter-email" name="email" type="text" class="newsletter-subscribe-form__input" placeholder="email" />
          </div>

          <div class="col-xs-12">
            <input type="submit" class="newsletter-subscribe-form__submit" value="Subscribe">
            <span class="newsletter-subscribe-form__error error-message">&nbsp;</span>
          </div>
          <div class="col-xs-12 newsletter-subscribe-form__loader loading hidden"></div>
        </div>
      </form>
    </div>
  </div>
  <div class="clearfix"></div>

</section>
