          <%# </div>
          <%# <div class="col-xs-9">
          <%#   <input id="date" type="text" class="request-inspection-form__input request-inspection-form__input--date" placeholder="MM/DD/YYYY" />
          <%#   <button class="request-inspection-form__calendar-button"><i class="glyphicon glyphicon-calendar"></i></button>
          <%# </div> %>

          <div class="col-xs-offset-3 col-xs-9">
            <button type="submit" class="request-inspection-form__submit">SUBMIT</button>
            <span class="request-inspection-form__error error-message">&nbsp;</span>
          </div>
          <div class="col-xs-12 newsletter-subscribe-form__loader loading hidden"></div>
          <div class="clearfix"></div>
        </div>
      </form>
    </div>
  </div>
</section>
